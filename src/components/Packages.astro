---
const packages = [
  {
    name: 'Instrumental',
    price: '100',
    popular: false,
    features: [
      'Master y Pista',
      'Arreglo musical',
      'Línea de guitarra',
      '6 instrumentos MIDI (máximo)'
    ]
  },
  {
    name: 'Standard',
    price: '150',
    popular: true,
    features: [
      'Master y Pista',
      'Arreglo musical',
      'Línea de guitarra',
      '6 instrumentos MIDI (máximo)',
      '1 voz (máximo 2 horas de grabación)',
      'Grabación a domicilio',
      'Vocal coach básico'
    ]
  },
  {
    name: 'Premium',
    price: '350',
    popular: false,
    features: [
      'Composición',
      'Arreglo musical',
      'Master y Pista',
      'Multitrack',
      'Línea de guitarra',
      '10 instrumentos MIDI (máximo)',
      '3 voces y 1 voz de apoyo (máximo 4 horas)',
      'Grabación a domicilio',
      'Arreglo y dirección coral',
      'Vocal Coach',
      'Grabación de músicos (Live) - OPCIONAL'
    ]
  }
];
---

<section class="packages section" id="paquetes">
  <div class="container">
    <div class="packages-header">
      <h2 class="section-title">Paquetes Alabastro</h2>
      <p class="packages-subtitle">
        Todos los paquetes son válidos únicamente para una (1) canción
      </p>
    </div>

    <div class="packages-grid">
      {packages.map(pkg => (
        <div class={`package-card ${pkg.popular ? 'popular' : ''}`}>
          {pkg.popular && <div class="badge">Más popular</div>}
          <h3 class="package-name">{pkg.name}</h3>
          <div class="package-price">
            <span class="currency">$</span>
            <span class="amount">{pkg.price}</span>
          </div>
          <ul class="package-features">
            {pkg.features.map(feature => (
              <li>
                <svg width="20" height="20" viewBox="0 0 20 20" fill="none">
                  <path d="M16.667 5L7.5 14.167L3.333 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                {feature}
              </li>
            ))}
          </ul>
          <a href="#contacto" class="btn btn-package">Solicitar</a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .packages {
    background-color: white;
  }

  .packages-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2.5rem;
    color: var(--color-text-dark);
    margin-bottom: 1rem;
  }

  .packages-subtitle {
    color: var(--color-text-light);
    font-size: 1.1rem;
  }

  .packages-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    max-width: 1100px;
    margin: 0 auto;
  }

  .package-card {
    background-color: var(--color-primary);
    padding: 2.5rem;
    border-radius: 1.5rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    position: relative;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
  }

  .package-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 12px 40px rgba(0, 0, 0, 0.2);
  }

  .package-card.popular {
    border: 3px solid var(--color-text-dark);
    transform: scale(1.05);
  }

  .badge {
    position: absolute;
    top: -12px;
    left: 50%;
    transform: translateX(-50%);
    background-color: var(--color-taupe);
    color: var(--color-white);
    padding: 0.5rem 1.5rem;
    border-radius: 2rem;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .package-name {
    font-size: 1.8rem;
    color: var(--color-white);
    margin-bottom: 1rem;
    text-align: center;
  }

  .package-price {
    text-align: center;
    margin-bottom: 2rem;
  }

  .currency {
    font-size: 2rem;
    color: var(--color-white);
    vertical-align: super;
  }

  .amount {
    font-size: 4rem;
    font-weight: 700;
    color: var(--color-white);
    font-family: var(--font-display);
  }

  .package-features {
    list-style: none;
    margin-bottom: 2rem;
    flex-grow: 1;
  }

  .package-features li {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    margin-bottom: 1rem;
    color: var(--color-white);
    line-height: 1.6;
  }

  .package-features svg {
    color: var(--color-white);
    flex-shrink: 0;
    margin-top: 0.2rem;
  }

  .btn-package {
    width: 100%;
    background-color: var(--color-white);
    color: var(--color-primary);
    font-weight: 600;
  }

  .btn-package:hover {
    background-color: var(--color-background);
    color: var(--color-text-dark);
  }

  @media (max-width: 968px) {
    .packages-grid {
      grid-template-columns: 1fr;
    }

    .package-card.popular {
      transform: scale(1);
    }
  }
</style>